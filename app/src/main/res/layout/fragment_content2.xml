<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.Content2Fragment">

    <View
        android:id="@+id/viewCloud"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="15dp"
        android:background="#fff"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toStartOf="@id/viewPreciptation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txtCloud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cloud"
        android:textColor="@color/purple_700"
        android:fontFamily="@font/poppins_medium"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/viewCloud"
        app:layout_constraintStart_toStartOf="@id/viewCloud"/>

    <TextView
        android:id="@+id/tvCloud"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:textSize="20sp"
        android:textColor="@color/purple_700"
        android:layout_marginTop="28dp"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintTop_toTopOf="@id/viewCloud"
        app:layout_constraintStart_toStartOf="@id/viewCloud"
        app:layout_constraintEnd_toEndOf="@id/viewCloud"
        app:layout_constraintBottom_toBottomOf="@id/viewCloud"/>


    <ImageView
        android:id="@+id/vectorCloud"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_cloud"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="4.37dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="55.63dp"
        app:layout_constraintTop_toTopOf="@id/viewCloud"
        app:layout_constraintEnd_toEndOf="@id/viewCloud"
        app:layout_constraintStart_toStartOf="@id/viewCloud"
        app:layout_constraintBottom_toBottomOf="@+id/viewCloud"/>

    <View
        android:id="@+id/viewPreciptation"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="130dp"
        android:layout_marginEnd="130dp"
        android:background="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txtPreciptation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preciptation"
        android:textColor="@color/purple_700"
        android:fontFamily="@font/poppins_medium"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/viewPreciptation"
        app:layout_constraintStart_toStartOf="@id/viewPreciptation"/>

    <TextView
        android:id="@+id/tvPreciptation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:textSize="20sp"
        android:textColor="@color/purple_700"
        android:layout_marginTop="28dp"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintTop_toTopOf="@id/viewPreciptation"
        app:layout_constraintStart_toStartOf="@id/viewPreciptation"
        app:layout_constraintEnd_toEndOf="@id/viewPreciptation"
        app:layout_constraintBottom_toBottomOf="@id/viewPreciptation"/>

    <ImageView
        android:id="@+id/vectorPreciptation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_humidity"
        android:layout_marginTop="27dp"
        android:layout_marginStart="66dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="11dp"
        app:layout_constraintTop_toTopOf="@id/viewPreciptation"
        app:layout_constraintEnd_toEndOf="@id/viewPreciptation"
        app:layout_constraintStart_toStartOf="@id/viewPreciptation"
        app:layout_constraintBottom_toBottomOf="@id/viewPreciptation"/>

    <View
        android:id="@+id/viewRainy"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:textColor="@color/purple_700"
        app:layout_constraintStart_toEndOf="@id/viewPreciptation"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txtRainy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chance Rainy"
        android:textColor="@color/purple_700"
        android:fontFamily="@font/poppins_medium"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/viewRainy"
        app:layout_constraintStart_toStartOf="@id/viewRainy"/>

    <TextView
        android:id="@+id/tvRainy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:textSize="20sp"
        android:textColor="@color/purple_700"
        android:layout_marginTop="28dp"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintTop_toTopOf="@id/viewRainy"
        app:layout_constraintStart_toStartOf="@id/viewRainy"
        app:layout_constraintEnd_toEndOf="@id/viewRainy"
        app:layout_constraintBottom_toBottomOf="@id/viewRainy"/>

    <ImageView
        android:id="@+id/vectorPressure"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_prediction"
        android:layout_marginTop="32dp"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="12.97dp"
        app:layout_constraintTop_toTopOf="@id/viewRainy"
        app:layout_constraintStart_toStartOf="@id/viewRainy"
        app:layout_constraintEnd_toEndOf="@id/viewRainy"
        app:layout_constraintBottom_toBottomOf="@id/viewRainy"/>


</androidx.constraintlayout.widget.ConstraintLayout>